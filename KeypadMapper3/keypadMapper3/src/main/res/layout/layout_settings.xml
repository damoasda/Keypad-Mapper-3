				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:clickable="true"
				android:orientation="vertical"
				android:paddingLeft="15dp"
				android:paddingRight="20dp"
				android:paddingTop="0dp">

				<TextView
